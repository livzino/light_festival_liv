import "../global_css/style.css";
---

<div class="banner">
  <div class="track">
    <div class="content">&nbsp;SEE YOU ON FEB Feb 2 TO 25, 2024!&nbsp;&nbsp;&nbsp; *&nbsp;&nbsp;&nbsp;FREE ATTENDANCE &nbsp;&nbsp;&nbsp;* &nbsp;&nbsp;&nbsp;SEE YOU ON FEB Feb 2 TO 25, 2024 &nbsp;&nbsp;&nbsp;*&nbsp;&nbsp;&nbsp; FREE ATTENDANCE *&nbsp;&nbsp;&nbsp;SEE YOU ON FEB Feb 2 TO 25, 2024&nbsp;&nbsp;&nbsp; *&nbsp;&nbsp;&nbsp; FREE ATTENDANCE *&nbsp;&nbsp;&nbsp;SEE YOU ON FEB Feb 2 TO 25, 2024&nbsp;&nbsp;&nbsp; *&nbsp;&nbsp;&nbsp; FREE ATTENDANCE *&nbsp;&nbsp;&nbsp;SEE YOU ON FEB Feb 2 TO 25, 2024&nbsp;&nbsp;&nbsp; *&nbsp;&nbsp;&nbsp; FREE ATTENDANCE *</div>
  </div>

  <style>
    .banner {
      position: relative;
      width: 100vw;
      max-width: 100%;
      height: 100px;
      overflow-x: hidden;
      background-color: var(--line-banner);
      color: var(--text-navy);
      font-size: var(--font-size-banner);
      font-weight: bold;

      font-family: var(--font-chicle);
      display: flex;
      align-items: center;
    }

    .track {
      position: absolute;
      white-space: nowrap;
      will-change: transform;
      animation: banner 10s linear infinite;
    }

    @keyframes banner {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-50%);
      }
    }
  </style>
</div>
